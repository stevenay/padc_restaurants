<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/keyline_1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/ad_mark"/>

    <ImageView
        android:id="@+id/iv_restaurant"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/spacing_double"
        android:src="@drawable/sample_restaurant_icon"/>

    <RatingBar
        android:id="@+id/rb_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_restaurant"
        android:layout_toRightOf="@id/iv_restaurant"
        android:rating="4"/>

    <TextView
        android:id="@+id/tv_restaurant_title"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rb_rating"
        android:layout_below="@id/rb_rating"
        android:text="YKKO Kyae OO"/>

    <TextView
        android:id="@+id/tv_tags"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_restaurant_title"
        android:layout_below="@id/tv_restaurant_title"
        android:text="Kyae OO, BBQ"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tags"
        android:layout_below="@id/tv_tags"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/sample_restaurant_type_mark"
            />

        <ImageView
            android:id="@+id/iv_halal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/sample_restaurant_type_mark"
            />

        <ImageView
            android:id="@+id/iv_kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/sample_restaurant_type_mark"
            />

        <TextView
            android:id="@+id/tv_leading_in_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:textAlignment="textEnd"
            tools:text="delivers in 40 min."
            style="@style/Base.TextAppearance.AppCompat.Caption"/>

    </LinearLayout>



</RelativeLayout>